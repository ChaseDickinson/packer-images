{
  "variables": {
    "cpus": "1",
    "files": "../files",
    "filename": "{{isotime \"06.01.02.\"}}_{{user `template_name`}}",
    "headless": "true",
    "home": "/home/{{user `ssh_username`}}/",
    "keep_registered": "false",
    "memory": "4096",
    "output_drive": "{{env `ONEDRIVE`}}",
    "scripts_dir": "../scripts",
    "skip_export": "true",
    "ssh_username": "ubuntu",
    "ssh_password": "ubuntu",
    "template_name": "additions",
    "timestamp": "{{isotime \"0601021504\"}}",
    "vm_name": "{{user `timestamp`}}.{{user `os_name`}}-{{user `os_type`}}"
  },
  "builders": [
    {
      "type": "hyperv-vmcx",
      "clone_from_vmcx_path": "..\\..\\..\\{{user `os_version`}}-base",
      "communicator": "ssh",
      "cpus": "{{user `cpus`}}",
      "disk_block_size": "1",
      "generation": "2",
      "headless": "{{user `headless`}}",
      "keep_registered": "{{user `keep_registered`}}",
      "memory": "{{user `memory`}}",
      "output_directory": "..\\..\\..\\{{user `timestamp`}}.{{user `os_name`}}",
      "shutdown_command": "echo '{{user `ssh_password`}}' | sudo -S shutdown -P now",
      "skip_export": "{{user `skip_export`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "2h",
      "ssh_username": "{{user `ssh_username`}}",
      "switch_name": "Default Switch",
      "vm_name": "{{user `vm_name`}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "destination": "{{user `home`}}",
      "source": "{{user `files`}}"
    },
    {
      "type": "shell",
      "environment_vars": [
        "PASSWORD={{user `ssh_password`}}",
        "USERNAME={{user `ssh_username`}}"
      ],
      "expect_disconnect": true,
      "pause_before": "10s",
      "scripts": [
        "{{user `scripts_dir`}}/tools.sh"
      ]
    },
    {
      "type": "shell",
      "environment_vars": [
        "OS_TYPE={{user `os_type`}}",
        "PASSWORD={{user `ssh_password`}}",
        "USERNAME={{user `ssh_username`}}",
        "SCRIPTS_DIR={{user `scripts_dir`}}"
      ],
      "expect_disconnect": true,
      "pause_before": "10s",
      "scripts": [
        "{{user `scripts_dir`}}/{{user `os_type`}}.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "compress",
      "format": ".zip",
      "keep_input_artifact": false,
      "output": "{{user `output_drive`}}\\vms\\{{user `os_name`}}_{{user `os_type`}}\\{{user `filename`}}.zip"
    }
  ]
}