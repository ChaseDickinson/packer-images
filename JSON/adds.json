{
  "variables": {
    "adds_output_directory": "{{user `export_drive`}}\\{{user `timestamp`}}.{{user `os_name`}}.adds",
    "adds_vm_name": "{{user `vm_name`}}.adds"
  },
  "builders": [
    {
      "name": "adds",
      "type": "hyperv-vmcx",
      "clone_from_vmcx_path": "{{user `export_directory`}}\\base\\{{user `os_name`}}_{{user `os_type`}}",
      "communicator": "{{user `communicator`}}",
      "cpus": "{{user `cpus`}}",
      "disk_block_size": "{{user `disk_block_size`}}",
      "generation": "{{user `generation`}}",
      "headless": "{{user `headless`}}",
      "keep_registered": "{{user `keep_registered`}}",
      "memory": "{{user `memory`}}",
      "output_directory": "{{user `adds_output_directory`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "skip_export": "{{user `skip_export`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "switch_name": "{{user `switch_name`}}",
      "vm_name": "{{user `vm_name`}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "destination": "{{user `home`}}",
      "source": "{{user `files_dir`}}"
    },
    {
      "type": "shell",
      "environment_vars": [
        "PASSWORD={{user `ssh_password`}}",
        "USERNAME={{user `ssh_username`}}"
      ],
      "expect_disconnect": true,
      "pause_before": "10s",
      "scripts": [
        "{{user `scripts_dir`}}/tools.sh",
        "{{user `scripts_dir`}}/{{user `os_type`}}.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "compress",
      "format": ".zip",
      "keep_input_artifact": false,
      "output": "{{user `zip_directory`}}.adds.zip"
    }
  ]
}