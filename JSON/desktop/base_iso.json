{
  "variables": {
    "cpus": "1",
    "disk_size": "25600",
    "files": "../../files",
    "headless": "true",
    "home": "/home/{{user `ssh_username`}}/",
    "keep_registered": "false",
    "memory": "4096",
    "os_type": "desktop",
    "scripts": "../../scripts",
    "skip_export": "false",
    "ssh_username": "ubuntu",
    "ssh_password": "ubuntu",
    "vm_name": "{{user `os_name`}}-{{user `os_type`}}-base"
  },
  "builders": [
    {
      "type": "hyperv-iso",
      "boot_command": [
        "{{user `boot_command`}}"
      ],
      "boot_wait": "2s",
      "communicator": "ssh",
      "cpus": "{{user `cpus`}}",
      "disk_block_size": "1",
      "disk_size": "{{user `disk_size`}}",
      "enable_dynamic_memory": false,
      "enable_mac_spoofing": true,
      "enable_virtualization_extensions": true,
      "generation": "2",
      "headless": "{{user `headless`}}",
      "http_directory": "./",
      "iso_url": "http://releases.ubuntu.com/{{user `os_version`}}/ubuntu-{{user `os_version`}}-{{user `os_type`}}-amd64.iso",
      "iso_checksum": "{{user `iso_checksum`}}",
      "keep_registered": "{{user `keep_registered`}}",
      "memory": "{{user `memory`}}",
      "output_directory": "..\\..\\{{user `os_version`}}-base",
      "shutdown_command": "echo '{{user `ssh_password`}}' | sudo -S shutdown -P now",
      "skip_export": "{{user `skip_export`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "2h",
      "ssh_username": "{{user `ssh_username`}}",
      "switch_name": "Default Switch",
      "vm_name": "{{user `vm_name`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "USERNAME={{user `ssh_username`}}",
        "PASSWORD={{user `ssh_password`}}"
      ],
      "expect_disconnect": true,
      "pause_before": "10s",
      "scripts": [
        "{{user `scripts`}}/base.sh"
      ]
    }
  ],
  "post-processors": []
}