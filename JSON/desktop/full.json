{
  "variables": {
    "cpus": "1",
    "disk_size": "25600",
    "files": "../../files",
    "filename": "{{isotime \"06.01.02.\"}}_{{user `template_name`}}",
    "headless": "true",
    "home": "/home/{{user `ssh_username`}}/",
    "keep_registered": "false",
    "memory": "4096",
    "os_type": "desktop",
    "output_drive": "{{env `ONEDRIVE`}}",
    "scripts": "../../scripts",
    "skip_export": "true",
    "ssh_username": "ubuntu",
    "ssh_password": "ubuntu",
    "template_name": "full",
    "timestamp": "{{isotime \"0601021504\"}}",
    "vm_name": "{{user `timestamp`}}.{{user `os_name`}}-{{user `os_type`}}"
  },
  "builders": [
    {
      "type": "hyperv-iso",
      "boot_command": [
        "{{user `boot_command`}}"
      ],
      "boot_wait": "2s",
      "communicator": "ssh",
      "cpus": "{{user `cpus`}}",
      "disk_block_size": "1",
      "disk_size": "{{user `disk_size`}}",
      "generation": "2",
      "headless": "{{user `headless`}}",
      "http_directory": "./",
      "iso_url": "http://releases.ubuntu.com/{{user `os_version`}}/ubuntu-{{user `os_version`}}-{{user `os_type`}}-amd64.iso",
      "iso_checksum": "{{user `iso_checksum`}}",
      "keep_registered": "{{user `keep_registered`}}",
      "memory": "{{user `memory`}}",
      "output_directory": "..\\..\\..\\{{user `timestamp`}}.{{user `os_name`}}",
      "shutdown_command": "echo '{{user `ssh_password`}}' | sudo -S shutdown -P now",
      "skip_export": "{{user `skip_export`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "2h",
      "ssh_username": "{{user `ssh_username`}}",
      "switch_name": "Default Switch",
      "vm_name": "{{user `vm_name`}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "destination": "{{user `home`}}",
      "only": [
        "hyperv-iso"
      ],
      "source": "{{user `files`}}"
    },
    {
      "type": "shell",
      "environment_vars": [
        "USERNAME={{user `ssh_username`}}",
        "PASSWORD={{user `ssh_password`}}"
      ],
      "expect_disconnect": true,
      "pause_before": "10s",
      "scripts": [
        "{{user `scripts`}}/base.sh",
        "{{user `scripts`}}/linux_cloud_tools.sh",
        "{{user `scripts`}}/desktop.sh"
      ]
    },
    {
      "type": "shell",
      "environment_vars": [
        "PASSWORD={{user `ssh_password`}}"
      ],
      "expect_disconnect": true,
      "only": [
        "hyperv-iso"
      ],
      "pause_before": "10s",
      "scripts": [
        "{{user `scripts`}}/linux_vm_tools.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "compress",
      "format": ".zip",
      "keep_input_artifact": false,
      "only": [
        "hyperv-iso"
      ],
      "output": "{{user `output_drive`}}\\vms\\{{user `os_name`}}_{{user `os_type`}}\\{{user `filename`}}.zip"
    }
  ]
}