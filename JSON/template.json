{
  "builders": [
    {
      "name": "base",
      "type": "hyperv-iso",
      "boot_command": [
        "{{user `boot_command`}}"
      ],
      "boot_wait": "{{user `boot_wait`}}",
      "communicator": "{{user `communicator`}}",
      "cpus": "{{user `cpus`}}",
      "disk_block_size": "{{user `disk_block_size`}}",
      "disk_size": "{{user `disk_size`}}",
      "generation": "{{user `generation`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "{{user `http_directory`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "keep_registered": "{{user `keep_registered`}}",
      "memory": "{{user `memory`}}",
      "output_directory": "{{user `base_output_directory`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "switch_name": "{{user `switch_name`}}",
      "vm_name": "{{user `base_vm_name`}}"
    },
    {
      "name": "full",
      "type": "hyperv-iso",
      "boot_command": [
        "{{user `boot_command`}}"
      ],
      "boot_wait": "{{user `boot_wait`}}",
      "communicator": "{{user `communicator`}}",
      "cpus": "{{user `cpus`}}",
      "disk_block_size": "{{user `disk_block_size`}}",
      "disk_size": "{{user `disk_size`}}",
      "generation": "{{user `generation`}}",
      "headless": "{{user `headless`}}",
      "http_directory": "{{user `http_directory`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "keep_registered": "{{user `keep_registered`}}",
      "memory": "{{user `memory`}}",
      "output_directory": "{{user `full_output_directory`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "skip_export": "{{user `skip_export`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "{{user `ssh_timeout`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "switch_name": "{{user `switch_name`}}",
      "vm_name": "{{user `full_vm_name`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "PASSWORD={{user `ssh_password`}}",
        "USERNAME={{user `ssh_username`}}"
      ],
      "expect_disconnect": true,
      "pause_before": "10s",
      "scripts": [
        "{{user `scripts_dir`}}/base.sh",
        "{{user `scripts_dir`}}/linux_cloud_tools.sh"
      ]
    },
    {
      "type": "file",
      "destination": "{{user `home`}}",
      "source": "{{user `files_dir`}}",
      "only": [
        "full"
      ]
    },
    {
      "type": "shell",
      "environment_vars": [
        "PASSWORD={{user `ssh_password`}}",
        "USERNAME={{user `ssh_username`}}"
      ],
      "expect_disconnect": true,
      "pause_before": "10s",
      "scripts": [
        "{{user `scripts_dir`}}/tools.sh",
        "{{user `scripts_dir`}}/{{user `os_type`}}.sh"
      ],
      "only": [
        "full"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "shell-local",
      "environment_vars": [
        "SOURCE={{user `base_output_directory`}}",
        "DESTINATION={{user `export_directory`}}\\base\\{{user `os_name`}}_{{user `os_type`}}"
      ],
      "inline": [
        "echo \"Removing Directory: %DESTINATION%\"",
        "rmdir /Q /S %DESTINATION%",
        "echo \"Sleeping for 5 Seconds\"",
        "sleep 5",
        "echo \"Copying %SOURCE% to %DESTINATION%\"",
        "xcopy %SOURCE% %DESTINATION% /E/H/I",
        "echo \"Removing Directory: %SOURCE%\"",
        "rmdir /Q /S %SOURCE%"
      ],
      "tempfile_extension": ".cmd",
      "only": [
        "base"
      ]
    },
    {
      "type": "compress",
      "keep_input_artifact": false,
      "output": "{{user `zip_directory`}}.full.zip",
      "only": [
        "full"
      ]
    }
  ]
}