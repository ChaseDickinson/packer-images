{
    "variables": {
        "cpus": "1",
        "disk_size": "25600",
        "files": "../files",
        "home": "/home/{{user `initial_username`}}/",
        "initial_username": "ubuntu",
        "initial_password": "ubuntu",
        "iso_checksum_type": "sha256",
        "iso_checksum": "add4614b6fe3bb8e7dddcaab0ea97c476fbd4ffe288f2a4912cb06f1a47dcfa0",
        "memory": "4096",
        "os_name": "ubuntu",
        "os_version": "18.04.3",
        "os_nickname": "bionic",
        "remove_list": "{{template_dir}}\\remove.list",
        "scripts": "../scripts",
        "switch_name": "Default Switch",
        "vm_name": "{{user `os_version`}}-desktop-packer"
    },
    "builders": [
        {
            "type": "hyperv-iso",
            "iso_url": "http://releases.ubuntu.com/{{user `os_version`}}/ubuntu-{{user `os_version`}}-desktop-amd64.iso",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "communicator": "ssh",
            "ssh_username": "{{user `initial_username`}}",
            "ssh_password": "{{user `initial_password`}}",
            "ssh_timeout": "2h",
            "shutdown_command": "echo '{{user `initial_password`}}' | sudo -S shutdown -P now",
            "switch_name": "{{user `switch_name`}}",
            "cpus": "{{user `cpus`}}",
            "disk_block_size": "1",
            "disk_size": "{{user `disk_size`}}",
            "enable_dynamic_memory": false,
            "enable_mac_spoofing": true,
            "enable_virtualization_extensions": true,
            "generation": "2",
            "output_directory": "..\\..\\VMs\\{{user `os_nickname`}}-desktop\\{{timestamp}}",
            "vm_name": "{{user `vm_name`}}",
            "memory": "{{user `memory`}}",
            "http_directory": "./",
            "boot_wait": "0s",
            "boot_command": [
                "<esc><esc><esc><esc><esc><esc><enter><wait>",
                "linux /casper/vmlinuz noprompt ",
                "debug-ubiquity ",
                "url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
                "boot=casper noninteractive --- <enter>",
                "initrd /casper/initrd <enter>",
                "boot<enter>"
            ]
        }
    ],
    "provisioners": [

    ],
    "post-processors": []
}