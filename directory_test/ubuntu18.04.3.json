{
    "variables": {
        "os_name": "ubuntu",
        "os_version": "18.04.3",
        "os_nickname": "bionic",
        "scripts": "../scripts",
        "vm_name": "{{user `os_name`}}-{{user `os_version`}}-Packer",
        "cpus": "2",
        "memory": "4096",
        "disk_size": "51200",
        "iso_checksum_type": "sha256",
        "iso_checksum": "7d8e0055d663bffa27c1718685085626cb59346e7626ba3d3f476322271f573e",
        "switch_name": "External Switch",
        "username": "ubuntu",
        "password": "ubuntu"
    },
    "builders": [
        {
            "type": "hyperv-iso",
            "iso_url": "http://cdimage.ubuntu.com/releases/{{user `os_version`}}/release/ubuntu-{{user `os_version`}}-server-amd64.iso",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "communicator": "ssh",
            "ssh_username": "{{user `username`}}",
            "ssh_password": "{{user `password`}}",
            "ssh_timeout" : "2h",
            "shutdown_command": "echo '{{user `password`}}' | sudo -S shutdown -P now",
            "switch_name": "{{user `switch_name`}}",
            "cpus": "{{user `cpus`}}",
            "disk_block_size": "1",
            "disk_size": "{{user `disk_size`}}",
            "enable_dynamic_memory": false,
            "enable_mac_spoofing": true,
            "enable_virtualization_extensions": true,
            "generation": "2",
            "output_directory": "..\\..\\VMs\\{{timestamp}}_{{user `os_name`}}{{user `os_version`}}",
            "vm_name": "{{user `vm_name`}}",
            "memory": "{{user `memory`}}",
            "http_directory": "./",
            "boot_wait": "0s",
            "boot_command": [
                "<esc><esc><esc><esc><esc><esc><esc>",
                "set gfxpayload=1024x768<enter>",
                "linux /install/vmlinuz ",
                "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `os_nickname`}}.cfg ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname={{.Name}} ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
                "keyboard-configuration/variant=USA console-setup/ask_detect=false <enter>",
                "initrd /install/initrd.gz<enter> ",
                "boot<enter>"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "environment_vars": [
                "PATH={{.Path}}"
            ],
            "inline": ["echo Path is set to $PATH"]
        },
        {
            "type": "shell",
            "environment_vars": [
                "TEMPLATE={{.template_dir}}"
            ],
            "inline": ["echo Template directory is set to $TEMPLATE"]
        },
        {
            "type": "shell",
            "environment_vars": [
                "PWD={{.pwd}}"
            ],
            "inline": ["echo Working directory is set to $PWD"]
        }
    ],
    "post-processors": []
}