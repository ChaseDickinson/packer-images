{
    "variables": {
        "files": "../files",
        "home": "/home/{{user `ssh_username`}}/",
        "os_type": "server",
        "scripts": "../scripts",
        "ssh_username": "ubuntu",
        "ssh_password": "ubuntu"
    },
    "builders": [
        {
            "type": "hyperv-iso",
            "boot_wait": "0s",
            "boot_command": [
                "<esc><esc><esc><esc><esc><esc><esc>",
                "set gfxpayload=1024x768<enter>",
                "linux /install/vmlinuz ",
                "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `os_name`}}/preseed.cfg ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname={{.Name}} ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
                "keyboard-configuration/variant=USA console-setup/ask_detect=false <enter>",
                "initrd /install/initrd.gz<enter> ",
                "boot<enter>"
            ],
            "cpus": "1",
            "disk_block_size": "1",
            "disk_size": "25600",
            "enable_dynamic_memory": false,
            "enable_mac_spoofing": true,
            "enable_virtualization_extensions": true,
            "generation": "2",
            "http_directory": "./",
            "iso_url": "http://cdimage.ubuntu.com/releases/{{user `os_version`}}/release/ubuntu-{{user `os_version`}}-{{user `os_type`}}-amd64.iso",
            "iso_checksum": "{{user `iso_checksum`}}",
            "communicator": "ssh",
            "memory": "4096",
            "output_directory": "..\\..\\VMs\\{{user `os_type`}}\\{{user `os_name`}}\\{{timestamp}}",
            "shutdown_command": "echo '{{user `ssh_password`}}' | sudo -S shutdown -P now",
            "ssh_password": "{{user `ssh_password`}}",
            "ssh_timeout": "2h",
            "ssh_username": "{{user `ssh_username`}}",
            "switch_name": "Default Switch",
            "vm_name": "packer-{{user `os_version`}}-{{user `os_type`}}-{{timestamp}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "environment_vars": [
                "OS_NAME={{user `os_name`}}",
                "USERNAME={{user `ssh_username`}}",
                "PASSWORD={{user `ssh_password`}}"
            ],
            "expect_disconnect": true,
            "pause_before": "10s",
            "scripts": [
                "{{user `scripts`}}/base.sh",
                "{{user `scripts`}}/server.sh"
            ]
        }
    ],
    "post-processors": []
}